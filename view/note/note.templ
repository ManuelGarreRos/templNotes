package note

import "github.com/ManuelGarreRos/templNotes/model"

templ Note(note model.Note) {
    <div class="bg-gray-700 text-white rounded-lg shadow-md p-6 mb-4">
        <h1 class="text-2xl font-bold text-center mb-2 font-mono">{note.Title}</h1>
        <div class="bg-gray-500 h-px w-16 mx-auto mb-4"></div> <!-- Adjust the width and color as needed -->
        <p class="text-gray-300 font-mono">{note.Body}</p>
    </div>
}